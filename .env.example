# =============================================================================
# SMS Outreach Integration - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your secrets
# =============================================================================

# =============================================================================
# Authentication Configuration
# =============================================================================
# IMPORTANT: Authentication is REQUIRED - application only works through multi-zone proxy
# Multi-zone mode is MANDATORY - application requires forwarded JWT from SleepConnect proxy
MULTI_ZONE_MODE=true

# Auth0 Configuration (REQUIRED for both build and runtime)
AUTH0_SECRET=your-auth0-client-secret-here
AUTH0_CLIENT_SECRET=your-auth0-client-secret-here
AUTH0_CLIENT_ID=your-auth0-client-id-here
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_BASE_URL=https://dev.mydreamconnect.com/outreach

# =============================================================================
# Application URLs (REQUIRED)
# =============================================================================
# Base URL for this outreach application
NEXT_PUBLIC_APP_BASE_URL=https://dev.mydreamconnect.com

# SleepConnect main application URL
NEXT_PUBLIC_SLEEPCONNECT_URL=https://dev.mydreamconnect.com

# Base path (set in next.config.mjs)
NEXT_PUBLIC_BASE_PATH=/outreach

# =============================================================================
# API Configuration (REQUIRED)
# =============================================================================
# Backend API base URL (REST endpoints)
API_BASE_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev
NEXT_PUBLIC_API_BASE_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/dev

# WebSocket API URL for real-time message updates
NEXT_PUBLIC_WS_API_URL=wss://your-api-id.execute-api.us-east-1.amazonaws.com/dev

# =============================================================================
# Twilio Configuration (REQUIRED for API routes)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_MESSAGING_SERVICE_SID=your-twilio-messaging-service-sid

# =============================================================================
# Legacy Token Service (for standalone mode only - NOT USED)
# =============================================================================
# REACT_APP_ACCESS_TOKEN_SERVICE_URL=

