# =============================================================================
# SMS Outreach Integration - Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your secrets
# =============================================================================

# =============================================================================
# Authentication Configuration
# =============================================================================
# IMPORTANT: Authentication is REQUIRED for production environments
# DISABLE_AUTH should NEVER be set to "true" in production
# Uncomment only for local development/testing:
# DISABLE_AUTH=true

# Multi-zone mode: get user context from sleepconnect's forwarded JWT cookie
# This should be true when running behind the sleepconnect proxy
MULTI_ZONE_MODE=true

# Auth0 Configuration (JWT signing uses AUTH0_CLIENT_SECRET)
AUTH0_CLIENT_SECRET=your-auth0-client-secret-here

# =============================================================================
# Legacy Token Service (for standalone mode only)
# =============================================================================
REACT_APP_ACCESS_TOKEN_SERVICE_URL=

# =============================================================================
# WebSocket Configuration
# =============================================================================
# WebSocket API URL for real-time message updates
NEXT_PUBLIC_WS_API_URL=wss://vfb5l5uxak.execute-api.us-east-1.amazonaws.com/dev

