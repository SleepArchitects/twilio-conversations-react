{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended",
		"next/core-web-vitals"
	],
	"rules": {
		"@typescript-eslint/no-explicit-any": "warn"
	},
	"ignorePatterns": [
		"src/**",
		"node_modules/**",
		".next/**"
	]
}